@model IEnumerable<JN_WEB.Entities.UsuarioEnt>

@{
    ViewData["Title"] = "ConsultarUsuarios";
}

<div class="row">

    @if (Model.Count() > 0)
    {
        <div class="col-1"></div>
        <div class="col-10">
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Identificación</th>
                        <th>Nombre</th>
                        <th>Correo Electrónico</th>
                        <th>Estado</th>
                        <th>Rol</th>
                        <th>Editar</th>
                        <th>Cambiar Estado</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Identificacion</td>
                            <td>@item.Nombre</td>
                            <td>@item.CorreoElectronico</td>
                            @if (item.Estado == true)
                            {
                                <td>Activo</td>
                            }
                            else
                            {
                                <td>Inactivo</td>
                            }
                            <td>@item.NombreRol</td>
                            <td>
                                <a href="@Url.Action("Editar","Usuario", new { q = item.IdUsuario })">
                                    <i class="fa fa-pen"></i>
                                </a>
                            </td>
                            <td>
                                <a href="@Url.Action("CambiarEstado","Usuario", new { q = item.IdUsuario })">
                                    <i class="fa fa-exchange"></i>
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
            <div class="card">

                <div class="card-body">
                    <h5 class="card-title" style="text-align:center">No hay usuarios en este momento</h5>
                </div>

            </div>
            <br /><br />
        </div>
    }

</div>