@model JN_WEB.Entities.UsuarioEnt

@{
    ViewData["Title"] = "Recuperar";
    Layout = "~/Views/Shared/_Layout - Inicio.cshtml";
}

<span class="mask bg-gradient-dark opacity-6"></span>
<div class="container my-auto">
    <div class="row">
        <div class="col-lg-4 col-md-8 col-12 mx-auto">
            <div class="card z-index-0 fadeIn3 fadeInBottom">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg py-3 pe-1">
                        <h4 class="text-white font-weight-bolder text-center mt-2 mb-0">JN WEB</h4>
                    </div>
                </div>
                <div class="card-body">

                    @using (Html.BeginForm("RecuperarContrasenna", "Home", FormMethod.Post, new { @class = "text-start" }))
                    {
                        <div class="input-group input-group-outline my-3">
                            @Html.TextBoxFor(x => x.CorreoElectronico, new { @class="form-control", @placeholder="Correo Electrónico" })
                        </div>

                        @if (ViewBag.Mensaje != null)
                        {
                            <div style="text-align:center" class="alert alert-light" role="alert">
                                @ViewBag.Mensaje
                            </div>
                        }
                       
                        <div class="text-center">
                            <button type="submit" class="btn bg-gradient-primary w-100 my-4 mb-2">Recuperar Contraseña</button>
                        </div>
                        <p class="mt-4 text-sm text-center">
                            ¿tienes una cuenta?
                            <a href="@Url.Action("Index","Home")" class="text-primary text-gradient font-weight-bold">Ir al Inicio</a>
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>