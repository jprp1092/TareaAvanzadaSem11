@model IEnumerable<JN_WEB.Entities.CursoEnt>

@{
    ViewData["Title"] = "Pantalla Principal";
}

<div class="row">

    @if (Model.Count() > 0)
    {

        @foreach (var item in Model)
        {
            <div class="col-lg-3">
                <div class="card">

                    <img src="@item.Imagen" class="card-img-top" alt="..." />

                    <div class="card-body">
                        <h5 class="card-title">@item.Nombre</h5>
                        <p class="card-text">
                            Instructor: @item.Instructor
                            <br /> @item.FechaInicio.ToShortDateString() - @item.Finalizacion.ToShortDateString()
                            <br /> Espacios: @item.Cupo
                            <br /> Precio: $ @item.Precio
                        </p>

                        <div class="row">
                            <div class="col-1"></div>
                            <div class="col-5">
                                <a href="@Url.Action("AgregarCursoCarrito", "Carrito", new { q = item.IdCurso })" class="btn btn-outline-info"><i class="fa fa-plus"></i>  Añadir</a>
                            </div>
                            <div class="col-5">
                                <a href="" class="btn btn-outline-info"><i class="fa fa-list"></i>  Detalle</a>
                            </div>
                        </div>

                    </div>

                </div>
                <br /><br />
            </div>
        }

    }
    else
    {
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
            <div class="card">

                <div class="card-body">
                    <h5 class="card-title" style="text-align:center">No hay cursos disponibles en este momento</h5>
                </div>

            </div>
            <br /><br />
        </div>
    }

</div>